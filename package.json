{
  "name": "tiny-thunder",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm run watchjs & npm run watchcss",
    "dev-server": "wzrd --pushstate --path=public src/main.js:bundle.js -- -dv -p [csjs-extractify -o public/styles.csjs.css] | garnish",
    "demo": "npm run build && npm run demo-server",
    "start": "forever start demo-server.js",
    "stop": "forever stop demo-server.js",
    "dev": "npm run dev-server & npm run watchcss",
    "build-js": "browserify -p [csjs-extractify -o public/styles.csjs.css] -t yo-yoify -g es2020 -g uglifyify -p bundle-collapser/plugin src/main.js | uglifyjs -c > public/bundle.js",
    "build-css": "./node_modules/postcss-cli/bin/postcss --config postcss.json",
    "minify-css": "cat public/styles.csjs.css public/style.css | cleancss > public/style.min.css",
    "build": "npm run build-js && npm run build-css && npm run minify-css && html-inline public/index.prod.html > dist/index.html",
    "watchcss": "postcss --config postcss.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/tiny-thunder.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "bugs": {
    "url": "https://github.com/nichoth/tiny-thunder/issues"
  },
  "homepage": "https://github.com/nichoth/tiny-thunder#readme",
  "private": true,
  "dependencies": {
    "after": "^0.8.1",
    "arrify": "^1.0.1",
    "credit-card-regex": "^1.2.3",
    "csjs": "^1.0.5",
    "dom101": "^1.3.0",
    "form-data-set": "^2.0.0",
    "global": "^4.3.0",
    "h-buttons": "0.0.3",
    "h-shopping-cart": "0.0.7",
    "object-values": "^1.0.0",
    "object.pick": "^1.1.2",
    "observ": "^0.2.0",
    "observ-array": "^3.2.1",
    "observ-struct": "^6.0.0",
    "route-event": "1.0.5",
    "routes": "^2.1.0",
    "slug": "https://github.com/nichoth/node-slug/tarball/master",
    "xtend": "^4.0.1",
    "yo-yo": "^1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "basic-auth": "^1.0.4",
    "browserify": "^13.0.1",
    "bundle-collapser": "^1.2.1",
    "clean-css": "^3.4.19",
    "csjs-extractify": "^1.0.0-alpha.0",
    "ecstatic": "^1.4.0",
    "es2020": "^1.1.8",
    "forever": "^0.15.2",
    "garnish": "^5.1.1",
    "html-inline": "^1.2.0",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "postcss-inline-comment": "^2.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-scss": "^0.1.7",
    "precss": "^1.4.0",
    "uglify-js": "^2.7.3",
    "uglifyify": "^3.0.2",
    "wzrd": "^1.3.1",
    "yo-yoify": "^3.4.1"
  }
}
