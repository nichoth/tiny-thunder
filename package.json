{
  "name": "tiny-thunder",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm run watchjs & npm run watchcss",
    "dev-server": "wzrd --pushstate --path=public src/main.js:bundle.js -- -dv -t [envify --PUBLIC_ID `ini .env PUBLIC_ID`] -p [csjs-extractify -o public/styles.csjs.css] | garnish",
    "dev": "npm run dev-server & npm run watchcss",
    "watchjs": "watchify -t [envify --PUBLIC_ID `ini .env PUBLIC_ID`] -p [csjs-extractify -o public/styles.csjs.css] src/main.js -o public/bundle.js -dv",
    "build": "browserify -t [envify --PUBLIC_ID `ini .env PUBLIC_ID`] src/main.js > public/bundle.js",
    "css": "postcss --config postcss.json",
    "watchcss": "postcss --config postcss.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/tiny-thunder.git"
