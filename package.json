    "xtend": "^4.0.1",
    "yo-yo": "^1.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "csjs-extractify": "^1.0.0-alpha.0",
    "ecstatic": "^1.4.0",
    "envify": "^3.4.0",
    "garnish": "^5.1.1",
    "gulp": "^3.9.1",
    "ini-cli": "0.0.0",
